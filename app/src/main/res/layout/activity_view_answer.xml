<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ViewAnswerActivity"
    android:paddingLeft="40dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/view_answer_date"
        android:layout_marginTop="50dp"
        android:fontFamily="@font/dovemayo"
        android:textSize="30dp"
        android:text="날짜"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/view_answer_question"
        android:layout_below="@+id/view_answer_date"
        android:fontFamily="@font/dovemayo"
        android:layout_marginTop="10dp"
        android:textSize="30dp"
        android:text="카테고리/질문"/>

    <EditText
        android:layout_width="330dp"
        android:layout_height="350dp"
        android:id="@+id/view_answer_answer"
        android:layout_below="@+id/view_answer_question"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/dovemayo"
        android:textSize="30dp"
        android:hint="답변"
        android:background="@color/very_light"
        android:textAlignment="center"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="40dp"
        android:layout_below="@+id/view_answer_answer"
        android:layout_centerHorizontal="true">

        <Button
            android:layout_width="110dp"
            android:layout_height="60dp"
            android:id="@+id/view_answer_toindex"
            android:layout_below="@+id/view_answer_answer"
            android:fontFamily="@font/dovemayo"
            android:textSize="30dp"
            android:backgroundTint="@color/dark"
            android:text="목록"
            android:textStyle="bold"/>

    </LinearLayout>

</RelativeLayout>